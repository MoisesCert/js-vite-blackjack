
/**
 * Funcion que obtiene una carta de la baraja
 * @param {Array<String>} deck Es la baraja francesa ordenada aleatoriamente
 * @returns {String} retorna una carta de la baraja como string
 */
export const pedirCarta = ( deck ) => {

    if ( !deck || deck.length === 0 ) {
        throw 'No hay cartas en el deck';
    }
    const carta = deck.pop();
    return carta;
}